@inherits LayoutComponentBase
<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h6">Client</MudText>
        <MudSpacer />
        <LoginDisplay />
        <MudLink Href="https://learn.microsoft.com/aspnet/core/" Target="_blank">About</MudLink>
    </MudAppBar>

    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
